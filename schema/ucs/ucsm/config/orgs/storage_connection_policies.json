{
   "id": "ucs_system_config_storage_connection_policies#",
   "$schema": "http://json-schema.org/draft-07/schema#",
   "title": "EasyUCS ucs system config orgs storage_connection_policies section",
   "description": "EasyUCS ucs system config orgs storage_connection_policies section JSON schema",
   "type": "object",
   "properties": {
      "name": {
         "description": "SAN Connectivity Policy Name",
         "type": "string",
         "default": "",
         "pattern": "^[\\-\\.:_a-zA-Z0-9]{1,16}$"
      },
      "descr": {
         "description": "Description of SAN Connectivity Policy",
         "type": "string",
         "default": "",
         "pattern": "^[ !#$%&\\(\\)\\*\\+,\\-\\./:;\\?@\\[\\]_\\{\\|\\}~a-zA-Z0-9]{0,256}$"
      },
      "zoning_type": {
         "description": "SAN Connectivity Policy - Zoning Type",
         "type": "string",
         "default": "single_initiator_single_target",
         "enum": [
            "single_initiator_single_target", 
            "single_initiator_multiple_targets", 
            "none", 
            "simt", 
            "sist"
         ]
      },
      "fc_target_endpoints": {
         "description": "SAN Connectivity Policy - FC Target Endpoints",
         "type": "array",
         "items": {
            "type": "object",
            "properties": {
               "wwpn": {
                  "description": "SAN Connectivity Policy - FC Target Endpoint - WWPN",
                  "type": "string",
                  "default": "00:00:00:00:00:00:00:00",
                  "pattern": "^(([A-Fa-f0-9][A-Fa-f0-9]:){7}[A-Fa-f0-9][A-Fa-f0-9])|0$"
               },
               "descr": {
                  "description": "SAN Connectivity Policy - FC Target Endpoint - Description",
                  "type": "string",
                  "default": "",
                  "pattern": "^[ !#$%&\\(\\)\\*\\+,\\-\\./:;\\?@\\[\\]_\\{\\|\\}~a-zA-Z0-9]{0,256}$"
               },
               "path": {
                  "description": "SAN Connectivity Policy - FC Target Endpoint - Path",
                  "type": "string",
                  "default": "A",
                  "enum":  [
                     "A",
                     "B"
                  ]
               },
               "vsan": {
                  "description": "SAN Connectivity Policy - FC Target Endpoint - VSAN",
                  "type": "string",
                  "default": "",
                  "pattern": "^[\\-\\.:_a-zA-Z0-9]{0,32}$"
               }
            },
            "additionalProperties": false,
            "required": [
               "wwpn"
            ]
         },
         "minItems": 1
      }
   },
   "additionalProperties": false,
   "required": [
      "name"
   ]
}